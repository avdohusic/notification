@model Notification.Views.Shared.EmailButtonViewModel

<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
        <td bgcolor="#ffffff" align="center">
            <table border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td align="center" style="border-radius: 3px;" bgcolor="#ffffff">
                        <a href="@Model.Url" target="_blank" style="font-size: 20px;font-family: Helvetica, Arial, sans-serif;text-decoration: none; text-transform: uppercase; font-weight: bold; background-color: #0090f1; color: #FFF; width: auto; text-align: center; padding: 20px 28px; border-radius: 7px;">
                            @Model.Text
                        </a>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>